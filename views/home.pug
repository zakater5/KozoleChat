doctype html
html(lang='en')
    head
        meta(charset='UTF-8' name='viewport' content='width=device-width, initial-scale=1')
        title Chat
        link(rel="stylesheet", href="/static/style.css")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")

    body(style="background-color: #2b2b2b;")
        h1(style="color: #f2f2f2; font-size: 300%; margin-top: 3%; width: 100%; text-align: center;") Chat

        div(style='width: 13%; margin-right: 1%; position: absolute; right: 0;')
            table(id='usersList' style='border-radius: 10px; width: 100%;').featuredScripts-table
                tr
                    th Online
                each userSession in onlineSessions
                    tr
                        td
                            a(style='color: #d9d9d9; text-decoration: none;')= userSession

        div(id='messages' style='overflow: scroll; height: 500px; display: flex; flex-direction: column; margin-left: 15%; margin-right: 15%;')
            each message in sessionMessages
                div(style='margin-top: 10px; background-color: #474747; border-radius: 10px; width: 100%;')
                    a(style='color: #d9d9d9; font-size: 25px; text-decoration: none; margin-left: 2%;')= message.sentBy
                    br
                    p(style='color: #bfbdbd; word-wrap: break-word; white-space: pre-line; overflow-wrap: break-word; -ms-word-break: break-word; margin-left: 3%; margin-right: 3%;')= message.content
                    
        input(type='file' placeholder='Upload File' id='siofu_input')

        textarea(name="MessageBox" placeholder="text" id="messageBox" style="margin-left: 15%; margin-right: 15%; width: 1000px;" class="textarea")

    script(src="/siofu/client.js")
    script(src="/socket.io/socket.io.js")
    script(src="/static/text.js")