doctype html
html(lang="en")
    head
        meta(charset="UTF-8" name="viewport" content="width=device-width, initial-scale=1")
        title ScriptDB
        link(rel="stylesheet" href="/static/style.css")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")

    body(style="background-color: #2b2b2b;")
        
        div(style="float: left; margin-top: 5%;" id="placeholder")
            form(action="/register" method="post")
                div(style="margin-bottom: 1%;")
                    <a style="font-size: xx-large; font-family: Arial, Helvetica, sans-serif; color: azure;"><b>Sign Up</b></a>

                div(style="margin-bottom: 1%;")
                    <a style="font-size: large; font-family: Arial, Helvetica, sans-serif; opacity: 30%; color: azure;"><b>Please fill this form to create an account!</b></a>

                hr(style="width: 100%; margin-left: 0%; opacity: 30%; color: #bf00ff;")
                
                div.TextBox
                    input(name="username" type="text" placeholder="Username")

                div.TextBox
                    input(name="email" type="text" placeholder="Email")

                div.TextBox
                    input(name="password" type="password" placeholder="Password")

                div.TextBox
                    input(name="confirmPassword" type="password" placeholder="Confirm Password")

                div(style="margin-top: 1%;")
                    input(type="checkbox")
                    a(style="font-family: Arial, Helvetica, sans-serif; opacity: 60%; color: azure;") I accept the Terms of Use and Privacy Policy

                if RegistrationError
                    div(style="margin-top: 1.5%;")
                        p(style="Color: #ff0051;")= RegistrationError

                div(style="margin-top: 1.5%;")
                    input(type="submit" value="Sign Up")
    
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
